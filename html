<button id="explanation-btn" onclick="showExplanation()">Explanation</button>
<div id="correct-answer" style="display: none;"></div>
<div id="explanation" style="display: none;"></div>

<script>
  var questions = [
    {
      question: "What is the capital of France?",
      options: ["Paris", "London", "Berlin", "Madrid"],
      answer: "A",
      explanation: "The capital of France is Paris."
    },
    // Add more questions here...
  ];

  var questionIndex = 0;

  function displayQuestion() {
    var questionContainer = document.getElementById("question-container");
    var questionElement = document.getElementById("question");
    var optionsContainer = document.getElementById("options-container");

    // Clear previous question and options
    questionElement.textContent = "";
    optionsContainer.innerHTML = "";

    // Display current question and options
    var currentQuestion = questions[questionIndex];
    questionElement.textContent = currentQuestion.question;

    for (var i = 0; i < currentQuestion.options.length; i++) {
      var option = currentQuestion.options[i];
      var optionElement = document.createElement("div");
      optionElement.classList.add("option");
      optionElement.setAttribute("onclick", "checkAnswer(this)");
      optionElement.innerHTML = '<span class="answer">' + String.fromCharCode(65 + i) + '</span> ' + option;
      optionsContainer.appendChild(optionElement);
    }
  }

  function checkAnswer(option) {
    var options = document.getElementsByClassName("option");
    var countdownContainer = document.getElementById("countdown-container");

    // Disable all options
    for (var i = 0; i < options.length; i++) {
      options[i].classList.add("disabled");
    }

    // Check if the selected option is correct
    var currentQuestion = questions[questionIndex];
    if (option.textContent.includes(currentQuestion.answer)) {
      option.classList.add("correct");
      document.getElementById("explanation-btn").style.display = "block";
    } else {
      option.classList.add("incorrect");

      // Show the countdown timer
      countdownContainer.style.display = "block";

      // Show the correct answer after 10 seconds
      var timeLeft = 10;
      countdownContainer.textContent = "Alert: Wrong! Correct answer in..." + timeLeft + " sec";

      var countdown = setInterval(function() {
        timeLeft--;
        if (timeLeft >= 0) {
          countdownContainer.textContent = "Alert: Wrong! Correct answer in..." + timeLeft + " sec";
        } else {
          clearInterval(countdown);
          countdownContainer.style.display = "none";

          // Display the correct answer
          for (var i = 0; i < options.length; i++) {
            if (options[i].textContent.includes(currentQuestion.answer)) {
              options[i].classList.add("correct");
              break;
            }
          }

          document.getElementById("explanation-btn").style.display = "block";
        }
      }, 1000);
    }
  }

  function showExplanation() {
    var explanation = document.getElementById("explanation");
    explanation.textContent = questions[questionIndex].explanation;
    explanation.style.display = "block";
  }

  // Display the initial question
  displayQuestion();
</script>
</body>
